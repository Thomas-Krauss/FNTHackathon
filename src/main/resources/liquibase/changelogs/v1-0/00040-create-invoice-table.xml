<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
	logicalFilePath="v1-0/00040-create-invoice-table.xml">	

	<changeSet id="create-invoice-table" author="fnt">
		<createTable tableName="T_INVOICE">
			<column name="ID" type="BIGINT">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_INVOICE" />
			</column>

			<column name="UUID" type="VARCHAR(36)">
				<constraints nullable="false" unique="true" />
			</column>

			<column name="BILLING_DATE" type="DATE">
				<constraints nullable="false" />
			</column>					
		</createTable>
	</changeSet>	

	<changeSet id="add-initial-data-for-invoice-to-id-generator" author="fnt">
		<insert tableName="T_ID_GENERATOR">
			<column name="GENERATOR_NAME" value="T_INVOICE" />
			<column name="ID_VALUE" value="10000" />
		</insert>
	</changeSet>	

</databaseChangeLog>